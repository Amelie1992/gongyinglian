    <select id="queryList" resultMap="orderMap">
        SELECT
        `id`,
        `order_number`,
        `contract_number`,
        `good_number`,
        `int_time`,
        `out_time`,
        `phone`,
        `contact`,
        `email`,
        `address`,
        `remarks`,
        `total`,
        `number_type`,
        `number`,
        `merchant_contact`,
        `merchant_phone`,
        `merchant_email`,
        `merchant_address`,
        `receipt_time`,
        `receipt_detp_id`,
        `receipt_merchant_id`,
        `good_remarks`,
        `merchant_id`,
        `pass_status`,
        `pay_status`,
        `stock_status`,
        `buy_status`,
        `sell_status`,
        `alter_sale`,
        `arrival_time`,
        `dept_id`,
        `created_by`,
        `created_time`,
        `updated_by`,
        `updated_time`,
        `del_flag`,
        `buy_company_name`,
        `sale_company_name`
        FROM storage_order
        <where>
            del_flag=0
            <if test="merchantId!=null">and merchant_id=#{merchantId}</if>
            <if test="receiptMerchantId!=null">and receipt_merchant_id=#{receiptMerchantId}</if>
            <if test="orderNumber!=null and orderNumber!=''">and order_number like concat('%',#{orderNumber},'%')</if>
            <if test="passStatus!=null and passStatus!=''">and pass_status=#{passStatus}</if>
        </where>
        ORDER BY <!-- pass_status asc, -->created_time desc
        <if test="offset != null and limit != null">
            LIMIT #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
