<script src="libs/jquery.min.js"></script>
<script src="plugins/highcharts/highcharts.js"></script>
<script src="libs/bootstrap.min.js"></script>
<script src="messages/zh.js"></script>
<script src="messages/en.js"></script>
<script src="https://unpkg.com/vue-i18n/dist/vue-i18n.js"></script>
<script type="text/javascript">
    //伪数据源
    var areaChartData = {
        labels: ["January", "February", "March", "April", "May", "June", "July"],
        datasets: [
            {
                label: "Digital Goods",
                data: [28, 48, 40, 19, 86, 27, 90]
            }
        ]
    };
    //设置项
    var areaChartOptions = {
        //Boolean - whether to make the chart responsive to window resizing
        responsive: true,
        lineTension: 0,
        bezierCurve: false,

    };

    $(function () {

        /* $.ajax({
             type: 'POST',
             url: baseURL + 'reportform/highcharts/getTotalOrder'

         });*/

        var orderChart = Highcharts.chart('orderChart', {
            title: {
                text: '订单成交额'
            },
            xAxis: {
                categories: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            },
            yAxis: {
                title: {
                    text: '订单量'
                },
                lineWidth: 2,
                id: 'temperature-axis'
            },
            credits: {
                enabled: false
            },
            series: [{
                name: ' ',
                data: [7.0, 6.9, 9.5, 14.5, 18.2, 0, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6],
                showInLegend: false
            }]
        });

        var receivableChart = Highcharts.chart('receivableChart', {
            title: {
                text: '应收应付'
            },
            xAxis: {
                categories: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            },
            yAxis: {
                title: {
                    text: '应收应付'
                },
                lineWidth: 2,
                id: 'temperature-axis'
            },
            credits: {
                enabled: false
            },
            plotOptions: {
                spline: {
                    marker: {
                        radius: 4,
                        lineColor: '#666666',
                        lineWidth: 1
                    }
                }
            },
            series: [{
                name: ' ',
                data: [7.0, 6.9, 9.5, 7.5, 9.2, 10.5, 6.2, 5.5, 5.3, 4.3, 6.9, 9.6],
                showInLegend: false
            }]
        });

        var addUserChart = Highcharts.chart('addUserChart', {
            title: {
                text: '新增客户量'
            },
            xAxis: {
                categories: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            },
            yAxis: {
                title: {
                    text: '新增客户量'
                },
                lineWidth: 2,
                id: 'temperature-axis'
            },
            credits: {
                enabled: false
            },
            series: [{
                name: '',
                data: [4.2, 5.7, 8.5, 11.9, 1.2, 5.0, 8.6, 14.2, 10.3, 6.6, 4.8],
                showInLegend: false
            }]
        });

        var categoryChart = Highcharts.chart('categoryChart', {
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie',
                events: {
                    load: requestData // 图表加载完毕后执行的回调函数
                }
            },
            title: {
                text: '期货现货分类销售'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.y}</b>'
            },
            credits: {
                enabled: false
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    },
                    showInLegend: true
                }
            },
            series: [{
                showInLegend: true,
                name: '数量',
                colorByPoint: true,
                data: []
            }]
        });

        function requestData () {
            var params = {};
            params.dateType = 'year';
            params.stime = '';
            params.etime = '';
            params.itemList = [];
            vm.getDateArray(params);

            $.ajax({
                type: 'POST',
                url: baseURL + 'reportform/highcharts/showGoodsTypeNumber',
                contentType: 'application/json',
                data: JSON.stringify(params),
                success: function (res) {
                    if(res.code == 0){
                        for(var i = 0; i < res.list.length; i++) {
                            categoryChart.series[0].addPoint(res.list[i]);
                        }
                    }

                },
                cache: false
            });
        }
    })


</script>
