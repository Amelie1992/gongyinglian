            </div>
            <div class="row">
                <div class="form-group">
                    <!--<div class="col-xs-1">
                        <button type="button" class="btn btn-default" @click="showDiv(2)">{{$t('Recharge')}}</button>
                    </div>
                    <div class="col-xs-1">
                        <button type="button" class="btn btn-default" @click="showDiv(3)">{{$t('PutForward')}}</button>
                    </div>-->
                    <div class="col-xs-1">
                        <button type="button" class="btn btn-default" @click="showDiv(5)">{{$t('TransferAccounts')}}</button>
                    </div>
                </div>
