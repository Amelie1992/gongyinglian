    <!--添加银行卡  modal-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">{{$t('AddBankCard')}}</h4>
                </div>
                <div class="modal-body">
                    <form id="addCardForm" class="form-horizontal">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('RealName')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" class="form-control" v-model="bankCard.name" :placeholder="$t('RealName')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('IDNumber')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="idcard" class="form-control" v-model="bankCard.idcard" :placeholder="$t('IDNumber')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('BankCardNumber')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="bankCardNumber" class="form-control" v-model="bankCard.cardNo" :placeholder="$t('BankCardNumber')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('MobilePhoneNo')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="phone" class="form-control" v-model="bankCard.phone" :placeholder="$t('MobilePhoneNo')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group"></div>
                        </div>
                        <div class="row">
                            <div class="form-group"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{$t('close')}}</button>
                    <button type="button" class="btn btn-primary" @click="cardvalidate">{{$t('save')}}</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <!-- 转账信息 -->
    <div class="modal fade" id="ztransferModal" tabindex="-1" role="dialog" aria-labelledby="zzModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">{{$t('ConfirmYourTransferInformation')}}</h4>
                </div>
                <div class="modal-body">
                    <form id="zziForm" class="form-horizontal">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('Payee')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" class="form-control" v-model="transfer.payee" :placeholder="$t('RealName')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('AmountOfPayment')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="idcard" class="form-control" v-model="transfer.money" :placeholder="$t('IDNumber')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row" v-if="transfer.type==1">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('OrderId')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="bankCardNumber" class="form-control" v-model="transfer.orderno" :placeholder="$t('OrderId')"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">{{$t('StatementOfPayment')}}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="phone" class="form-control" v-model="transfer.explain" :placeholder="$t('MobilePhoneNo')"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{$t('close')}}</button>
                    <button type="button" class="btn btn-primary" >{{$t('ConfirmInformationAndPay')}}</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

